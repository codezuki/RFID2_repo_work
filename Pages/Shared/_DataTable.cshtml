@page
@model RFID2.Pages.Shared._DataTableModel



<table id="@Model.TableId" class="table table-bordered display">
    <thead class="table-light">
        <tr>
            @foreach (var col in Model.Columns)
            {
                <th>@col</th>
            }
        </tr>
        <tr>
            @foreach (var col in Model.Columns)
            {
                <th><input type="text" placeholder="Search @col" /></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.Rows)
        {
            <tr>
                @foreach (var col in Model.Columns)
                {
                    <td>@(row.ContainsKey(col) ? row[col] : "")</td>
                }
            </tr>
        }
    </tbody>
</table>